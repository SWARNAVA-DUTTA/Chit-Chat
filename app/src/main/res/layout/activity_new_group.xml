<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGroup">
    <include
        android:id="@+id/toolbar_group_create"
        layout="@layout/app_bar_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/L1"
        android:layout_below="@+id/toolbar_group_create"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:id="@+id/new_group_icon"
            android:layout_height="60dp"
            android:src="@drawable/profile" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/new_group_name"
        android:layout_marginLeft="5dp"
        android:hint="Enter your group name here..."/>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provide a group subject and optional group icon"
            android:layout_marginStart="20dp"
            android:id="@+id/message"
            android:layout_below="@+id/L1"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/tick"
            android:layout_below="@+id/message"
            android:layout_alignParentRight="true"/>


</RelativeLayout>